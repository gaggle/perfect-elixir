#!/usr/bin/env bash
set -euo pipefail
source "$(dirname "$0")/.shhelpers"
branch="perfect-elixir-4-development-workflows"
check "Branch is main?" \
  "[ \"$(git rev-parse --abbrev-ref HEAD)\" = \"$branch\" ]" \
  "git checkout '${branch}'"
step "Pulling latest code" "git pull origin '$branch' --rebase"
