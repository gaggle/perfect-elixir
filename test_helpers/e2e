source_bootstrap() {
  echo "---"
  echo "SOURCING BOOTSTRAP"
  source /tmp/bootstrap > ~/output.txt
}

assert_output() {
  echo -n "Output contains: \"$1\"… "
  if grep -q "$1" ~/output.txt; then
    echo -e "\033[0;32m✔\033[0m"
    exit_status=0
  else
    echo -e "\033[0;31m✘\033[0m"
    exit_status=1
  fi

  echo "::group::(Output)"
  cat ~/output.txt
  echo "::endgroup::"

  if [ $exit_status -ne 0 ]; then
    exit 1
  fi
}
